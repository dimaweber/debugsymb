#Checks: '-*,readability-identifier-naming,clang-analyzer-*,portability-*,readability-*,bugprone-*,cppcoreguidelines-*,modernize-*,-modernize-use-trailing-return-type'
Checks: '-*,bugprone-argument-comment,readability-static-accessed-through-instance,modernize-use-bool-literals,readability-simplify-boolean-expr,modernize-redundant-void-arg,readability-redundant-access-specifiers,readability-inconsistent-declaration-parameter-name,readability-else-after-return,modernize-use-nullptr,modernize-use-override,readability-delete-null-pointer,clang-diagnostic-unused-variable,readability-redundant-declaration,readability-use-anyofallof,modernize-use-default-member-init,modernize-use-equals-default'
#readability-identifier-naming,google-readability-casting,
HeaderFilterRegex: '.*.h'
WarningsAsErrors: '*,-readability-identifier-naming,-google-readability-casting'
FormatStyle: file
CheckOptions:
  - key: readability-braces-around-statements.ShortStatementLines
    value: '3'
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: 'true'
  - key: readability-identifier-naming.EnumCase
    value: 'CamelCase'
  - key: readability-identifier-naming.EnumPrefix
    value: 'E_'
  - key: readability-identifier-naming.EnumConstantCase
    value: 'CamelCase'
